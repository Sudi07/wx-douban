/* pages/home/home.wxss */
@import '/pages/grid/grid.wxss';
.containter {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.search-movie {
  padding: 20rpx;
  width: 710px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  border: 2px solid #eee;
}
.search-icon {
  margin-left: 20rpx;
  
}
.search-placeholder {
  color: #e9e9e9;
  font-size: 28rpx;
}
.session-page{
  width: 100%;
  background: #fff;
  padding: 20rpx;
  margin-top: 30rpx;
}
.session-header {
  display: flex;
  padding: 20rpx 0;
  flex-direction: row;
  align-items: center;
}
.session-header .header {
  flex: 1; 
  font-size: 32rpx;
  font-weight: 600;
} 
.session-header .more {
  width: 140rpx;
  text-align: center;
  font-size: 28rpx;
  color: lime;
}
.session-content {
  white-space: nowrap;
}
.movie-scroll {
    white-space: nowrap;    
}